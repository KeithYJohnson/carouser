<h1>Listing events</h1>



<table>
  <tr>
    <th>Title</th>
    <th>Where</th>
    <th>Address</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Description</th>
    <th>Host</th>
    <th>Distance To</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.where %></td>
    <td><%= event.address %></td>
    <td><%= event.date %></td>
    <td><%= event.start_time %></td>
    <td><%= event.end_time %></td>
    <td><%= event.description %></td>
    <td><%= event.host_id %></td>
    <td><%= event.distance_to(request.ip, :unit => :mi) %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>



